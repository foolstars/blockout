/* pages/nearby/nearby.wxss */

.nearby-wrapper {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
}

.map_container {
  position: absolute;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
}

.map {
  width: 100%;
  height: 100%;
}

.toggler {
  position: absolute;
  border-radius: 96rpx 96rpx 96rpx 96rpx;
  display: flex;
  font-size: 48rpx;
  vertical-align: middle;
  justify-content: center;
  align-items: center;
}

.map_text {
  position: absolute;
  left: 0;
  right: 0;
  bottom: 0px;
  height: 80px;
  background: #fff;
  padding: 0 15px;
}

.map_text {
  margin: 5px 0;
  display: block;
  font-size: 12px;
}

.h1 {
  margin: 15px 0;
  font-size: 15px;
}