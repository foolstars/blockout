/* pages/me/subs/login/login.wxss */
body {
  padding: 0rpx;
  margin: 0rpx;
}

textarea {
  font-size: 24rpx;
  font-family: 'Microsoft YaHei', '微软雅黑', MicrosoftJhengHei, '华文细黑', STHeiti, MingLiu;
}

div {
  min-height: 36rpx;
}

input,
textarea {
  border: rgb(235, 235, 235) 2rpx solid;
  border-radius: 6rpx;
  padding: 10rpx 16rpx;
  outline: 0;
}

textarea:hover {
  border: 2rpx solid #6bc1f2;
}

.login-wrapper {
  height: 360rpx !important;
  text-align: center;
  justify-content: center;
  padding: 0 0 0 0;
  margin: 20rpx 20rpx 20rpx 20rpx;
  background: radial-gradient(at 0% 0%, rgba(235, 235, 235, 1) 1%, rgba(237, 234, 237, 1) 100%);
  box-shadow: 5rpx 5rpx 5rpx 5rpx rgba(134, 54, 54, 0.2);
  border-radius: 20rpx 20rpx 20rpx 20rpx;
  display: flex !important;
  max-width: 750rpx;
}

.inputid {
  font-size: 32rpx;
  position: absolute;
  height: 80rpx !important;
  width: 360rpx !important;
  border-radius: 10rpx 10rpx 10rpx 10rpx;
  margin: 20rpx 0 0 0;
  box-shadow: 5rpx 5rpx 5rpx 5rpx rgba(134, 54, 54, 0.2);
}

.inputpw {
  font-size: 32rpx;
  height: 80rpx !important;
  width: 360rpx !important;
  margin: 140rpx 0 0 0;
  position: absolute;
  border-radius: 10rpx 10rpx 10rpx 10rpx;
  box-shadow: 5rpx 5rpx 5rpx 5rpx rgba(134, 54, 54, 0.2);
}

.login-button {
  background: radial-gradient(at 0% 0%, rgba(255, 252, 255, 1) 1%, rgba(255, 255, 255, 1) 100%);
  width: 110rpx !important;
  height: 60rpx !important;
  margin: 260rpx 0 0 0;
  border-radius: 10rpx 10rpx 10rpx 10rpx;
  box-shadow: 5rpx 5rpx 5rpx 5rpx rgba(134, 54, 54, 0.897);
  align-items: center;
  justify-content: center;
  display: flex;
  white-space: nowrap;
}