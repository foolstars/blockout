/* pages/homepage/homepage.wxss */
page {
  background: #f2f2f2;
}

.nav {
  position: fixed;
  background: rgb(255, 255, 255);
  color: #353535;
  z-index: 999999;
  max-height: 94rpx;
  width: 100%;
}

.flex {
  display: flex;
  text-align: center;
}

.nav .nav-item.current {
  border-bottom: 4rpx solid;
}

.text-selected {
  color: #e73922;
  font-size: 34rpx;
}

.nav .nav-item {
  height: 90rpx;
  display: inline-block;
  line-height: 90rpx;
  margin: 0 10rpx;
  padding: 0 20rpx;
  flex: 1;
}

.swiper {
  height: 400rpx;
  width: 100%;
}

.swiper-image {
  height: 100%;
  width: 100%;
}

.slide-image {
  height: 100%;
  width: 100%;
}